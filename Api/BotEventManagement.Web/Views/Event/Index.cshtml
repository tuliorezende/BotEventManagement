@model IEnumerable<BotEventManagement.Models.API.EventRequest>

@{
    ViewData["Title"] = "Index";
}
<h1>Eventos</h1>
<p class="align-right">
    <a class="btn btn-primary" asp-action="Create">Inserir Novo Evento</a>
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndDate)
                </td>
                <td>
                    <a class="btn btn-success" asp-area="" asp-controller="Event" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                    <a class="btn btn-warning" asp-area="" asp-controller="Event" asp-action="Details" asp-route-id="@item.Id">Detalhes</a>
                </td>
            </tr>
        }
    </tbody>
</table>
