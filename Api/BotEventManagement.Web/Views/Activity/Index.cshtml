@model IEnumerable<BotEventManagement.Models.API.ActivityResponse>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Lista de Atividades</h1>

<p class="align-right">
    <a class="btn btn-primary" asp-action="Create">Inserir Nova Atividade</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SpeakerName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SpeakerName)
            </td>
            <td>
                <a class="btn btn-success" asp-area="" asp-controller="Activity" asp-action="Edit" asp-route-id="@item.ActivityId">Editar</a>
                <a class="btn btn-warning" asp-area="" asp-controller="Activity" asp-action="Details" asp-route-id="@item.ActivityId">Detalhes</a>
            </td>
        </tr>
        }
    </tbody>
</table>
